<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/postFragment">

    <fragment
        android:id="@+id/postFragment"
        android:name="io.github.jesterz91.archsample.ui.post.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post">

        <action
            android:id="@+id/action_postFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/postDetailFragment"
        android:name="io.github.jesterz91.archsample.ui.detail.PostDetailFragment"
        android:label="fragment_post_detail"
        tools:layout="@layout/fragment_post_detail">

        <argument
            android:name="post"
            app:argType="io.github.jesterz91.archsample.network.data.Post" />

        <action
            android:id="@+id/action_postDetailFragment_to_userFragment"
            app:destination="@id/userFragment" />

    </fragment>

    <fragment
        android:id="@+id/userFragment"
        android:name="io.github.jesterz91.archsample.ui.user.UserFragment"
        android:label="UserFragment"
        tools:layout="@layout/fragment_user">

        <argument
            android:name="userId"
            app:argType="long" />

    </fragment>

</navigation>